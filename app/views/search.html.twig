{% extends "app.html.twig" %}

{% block styles %}
<style>
input.debug {
  border: 1px solid red;
}
</style>

{{ renderStyles() }}
{% endblock %}

{% block content %}
<div class="container">
  <div class="panel-wrapper row">
    <div class="col-md-10 col-md-offset-1">
      <div class="login-panel panel panel-default">
        <div class="panel-body">

          <section class="search-form row">
            <div class="col-md-6">
              <form action="/cities" method="GET" role="form" id="citySearchForm">

                <fieldset>
                  <legend>Search city</legend>
                  <div class="col-md-12 form-group">
                    <input id="search-city" class="form-control" placeholder="Enter city name" name="name" type="name" value="">
                  </div>
                </fieldset>

                <div class="col-md-12 form-group">
                  <ul id="list-cities" class="list hidden"></ul>
                </div>
              </form>
            </div>

            <div class="col-md-6">
              <form action="/styles" method="GET" role="form" id="styleSearchForm">

                <fieldset>
                  <legend>Search style</legend>
                  <div class="col-md-12 form-group">
                    <input id="search-style" class="form-control" placeholder="Enter style" name="name" type="name" value="">
                  </div>
                </fieldset>

                <ul id="selected-styles" class="inline-list"></ul>

                <div class="col-md-12 form-group">
                  <ul id="list-styles" class="list "></ul>
                </div>
              </form>
            </div>
          </section>

        </div> <!-- .panel-body -->
      </div> <!-- .panel -->
    </div> <!-- .col-md-10 -->

    <div class="col-md-10 col-md-offset-1">
      <div class="login-panel panel panel-default">
        <div class="panel-body">
        <h3>Search results</h3>
        <ul id="search-results" class="list">
        </ul>

        <input id="search-place" name="city_id" type="hidden" />

        {{ renderHtml('c3') }}

        </div> <!-- .panel-body -->
      </div> <!-- .panel -->
    </div> <!-- .col-md-10 -->

  </div> <!-- .panel-wrapper -->
</div> <!-- .container -->

{% endblock %}

{% block scripts %}
<script src="/assets/common/js/jquery.quicksearch.js"></script>
<script src="/assets/common/js/ajaxsearch.js?ts={{ ts }}"></script>

{{ renderScripts() }}
<script>

$(document).ready( function() {
    input = $('input#search-city');
    list = $('ul#list-cities');
    input.on('click', function() {
        if( input.attr('readonly') === 'readonly' ) {
            input.attr('readonly', false);
            input.val('');
            input.trigger('input');
            // state.cityChosen = null;
        }
    });

    ajaxSearch( 'search-city', 'list-cities', '/search/cities', false, function($item, input, list, state) {
      state.cityChosen = $item.data('id');
      input.val($item.html()).attr('readonly', 'readonly');
      list.addClass('hidden');
      $('#search-place').val($item.data('id'));
      $('#search-place').trigger('input');

    }, {
      cityChosen: null
    });

    ajaxSearch( 'search-style', 'list-styles', '/search/styles', true, function($item, input, list, state) {
      var id = $item.data('id');
      var name = $item.html();
      state.selectedStyles.append('<li data-id="' + id + '"><span class="label label-primary">' + name + '</span></li>');
    }, { selectedStyles: $( '#selected-styles' ) }, { multi: true } );

    ajaxSearch( 'search-place', 'search-results', '/search/places', true, function($item, input, list, state) {
      var id = $item.data('id');
      var name = $item.html();
      // $('#search-results li').show();
      // state.selectedStyles.append('<li data-id="' + id + '"><span class="label label-primary">' + name + '</span></li>');
    }, {} );

});

</script>
{% endblock %}